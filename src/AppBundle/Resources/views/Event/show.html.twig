{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <h1>Event</h1>

        <table class="record_properties table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ entity.lat }}</td>
            </tr>
            <tr>
                <th>Long</th>
                <td>{{ entity.long }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('event') }}" class="btn btn-lg btn-default"
                                         type="button">Back</a>
        <a href="{{ path('event_edit', { 'id': entity.id }) }}" class="btn btn-lg btn-default"
                                         type="button">Edit</a>

        {{ form(delete_form) }}
    </div>
{% endblock %}
