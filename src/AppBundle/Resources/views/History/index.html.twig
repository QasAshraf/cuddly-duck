{% extends '::base.html.twig' %}

{% block body -%}
    <h1>History list</h1>

    <table class="records_list table table-show">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Lat</th>
                <th>Lon</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('history_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.user }}</td>
                <td>{{ entity.lat }}</td>
                <td>{{ entity.lon }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('history_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('history_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('history_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
