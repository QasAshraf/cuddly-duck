{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">

        <h1>Checkin list</h1>


        <table class="records_list table table-striped">
            <thead>
            <tr>
                <th>Event Name</th>
                <th>Username</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.event.name }}</td>
                    <td>{{ entity.user.username }}</td>
                    <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>
{% endblock %}
